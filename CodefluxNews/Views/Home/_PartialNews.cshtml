@model IEnumerable<CodefluxNews.Models.selectTop8Articles_Result>

@{ Layout = "";}

<h3>Top Stories</h3>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-4" style="padding:10px">
                <img src="@item.Picture" class="img-thumbnail" />
            </div>
            <div class="col-8" style="padding:10px">
                <p>@item.Title</p>
            </div>
        }
    </div>

</div>
